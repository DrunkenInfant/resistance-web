<div class="row">
<div class="col-lg-3">
<ul class="player-list list-group">
  <li class="list-group-item active">
    Players
  </li>
{{#each model.players }}
  <li class="list-group-item">
    id: {{ id }},
    user: {{ user_id }},
    team: {{ team }}
  </li>
{{/each}}
</ul>
</div>
<div class="col-lg-9">
<h1 class="game-title">Game: {{ model.id }}</h1>

<div class="game-active-area">
	<div class="game-active-header">
		Select players to nominate
	</div>
	{{render "nomination_create" model}}
	<div style="width: 100%; clear: both;">
	</div>
</div>

<div class="missions-area">
	<ul class="missions-list">
	{{#each model.missions }}
	  {{#if isCurrent }}
	  <li class="active" >
	  {{else}}
		<li>
	  {{/if}}
		<div>{{ nbr_participants }}</div>
	  </li>
	{{/each}}
	</ul>
	<div style="width: 100%; clear: both;">
	</div>
</div>
</div>
</div>
